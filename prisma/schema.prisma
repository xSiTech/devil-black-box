generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id  @default(uuid()) 
  firstName     String 
  lastName      String
  email         String
  mobileNumber  String?
  profileImage  String?
  latitude      Float?
  longitude     Float?
  city          String
  area          String
  state         String
  country       String
  deleted       Boolean  @default(false)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  campaignId    String   @default(uuid()) 
}

